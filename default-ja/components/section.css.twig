.phpdocumentor-section {
    box-sizing: border-box;
    margin: 0 auto;
    max-width: var(--container-width);
    padding: 0 var(--spacing-lg);
    position: relative;
    width: 100%;
}

@media (min-width: 400px) {
    .phpdocumentor-section {
        padding: 0;
        width: 85%;
    }
}

@media (min-width: 550px) {
    .phpdocumentor-section {
        width: 80%;
    }
}
